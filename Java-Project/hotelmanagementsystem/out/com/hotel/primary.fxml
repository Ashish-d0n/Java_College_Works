<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Font?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>

<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.hotel.PrimaryController"
            prefWidth="600" prefHeight="400">

    <!-- Left Image -->
    <ImageView fx:id="myImageView" fitWidth="300" fitHeight="400" preserveRatio="true" />

    <!-- Right Sign In Form -->
    <AnchorPane layoutX="300" prefWidth="300" prefHeight="400">
        <FontAwesomeIcon fill="#a1a4bf" glyphName="USER" layoutX="125" layoutY="50" size="7em"/>
        <Label text="Sign In" layoutX="100" layoutY="120" textFill="#dddddd">
            <font>
                <Font name="Impact" size="25"/>
            </font>
        </Label>

        <VBox layoutX="50" layoutY="160" spacing="10">
            <TextField fx:id="username" promptText="Enter your username"/>
            <TextField fx:id="password" promptText="Password"/>
            <Button fx:id="LoginBtn" text="Login"/>
        </VBox>
    </AnchorPane>
</AnchorPane>